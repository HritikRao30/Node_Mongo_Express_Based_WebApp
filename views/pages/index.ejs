<% layout('layouts/boilerplate') -%>
    <h1>Best camping sites in Ohio</h1>
    <h2><a href="allcamps/new">Add a new camp</a></h2>>
    <% for (let camp of camps){%>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                        <% for(let image of camp.image) { %>
                            <img src="<%= image.url%>" class="card-img-top" alt="...">
                        <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= camp.title %> </h5>
                        <p class="card-text"><%= camp.description %></p>
                        <p class="card-text"><%= `$${camp.price}` %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= camp.location%></small>
                        </p>
                        <a class="btn btn-primary" href="/allcamps/<%=camp.id%>">View <%=camp.title%></a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>
